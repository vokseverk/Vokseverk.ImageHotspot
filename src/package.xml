<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE umbPackage [
	<!ENTITY % packageInfo SYSTEM "package.ent">
	%packageInfo;
]>
<umbPackage>
	<files>
		<!-- The manifest file should not be versioned -->
		<file ref="package.manifest" versioned="no" />
		
		<!-- The main files -->
		<file ref="&fileBaseName;.controller.js" />
		<file ref="&fileBaseName;.styles.css" />
		<file ref="&fileBaseName;.view.html" />
		<file ref="themeprevaluecontroller.js" />
		<file ref="theme.html" />
		
		<!-- Language files for translation -->
		<!-- <language ref="da-DK.xml" />
		<language ref="en-US.xml" />
		<language ref="en-GB.xml" /> -->
	</files>
	<info>
		<package>
			<name>&packageName;</name>
			<version>&packageVersion;</version>
			<iconUrl>&packageIconURL;</iconUrl>
			<license url="http://opensource.org/licenses/MIT">MIT License</license>
			<url>&packageURL;</url>
			<requirements type="strict">
				<major>7</major>
				<minor>0</minor>
				<patch>0</patch>
			</requirements>
		</package>
		<author>
			<name>&packageAuthor;</name>
			<website>&packageAuthorURL;</website>
		</author>
		<readme>&packageREADME;</readme>
	</info>
	<DocumentTypes />
	<Templates />
	<Stylesheets />
	<Macros />
	<DictionaryItems />
	<Languages />
	<DataTypes />
</umbPackage>
